alias newalias='vim /var/vagrant/dot-files/.vagrant_aliases; source ~/.bashrc'

if [ -f ~/.shared_aliases ]; then
    . ~/.shared_aliases
fi

# Git Aliases
alias gs='git status -sb'
alias pull='git pull'
alias push='git push'
alias commit='git add -A; git commit -am "'
alias log="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gitclear='git add -A; git stash'
alias cleanlocal='git branch | grep -v "master" | grep -v "r-beta" | xargs git branch -D'

alias fetch='git fetch'
alias sites='cd /var/www'

# Sites
alias akceli='cd /var/www/akceli'
alias flippilot='sites; cd api.flippilot'

# Git Branches
alias master='git checkout master; fetch; pull'
alias beta='git checkout r-beta; fetch; pull'

function pushup() {
        branch=$(git branch | sed -n -e 's/^\* \(.*\)/\1/p')
        git push --set-upstream origin $branch
}
function mergeMaster() {
        branch=$(git branch | sed -n -e 's/^\* \(.*\)/\1/p')
        echo $branch
        master
        git checkout $branch
        git merge master
}
function mergeBeta() {
        branch=$(git branch | sed -n -e 's/^\* \(.*\)/\1/p')
        echo $branch
        beta
        git checkout $branch
        git merge r-beta
}

# Laravel Aliases
alias dump='composer dump-autoload'
alias migrate='php artisan migreate --seed'
function makeMigration() {
        php artisan make:migration ${1}_migration --create=$1
}

# Npm 
alias serve='npm run serve'

