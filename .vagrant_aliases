alias newalias='vim /var/vagrant/dot-files/.vagrant_aliases; source ~/.bashrc'
alias newsharedalias='vim /var/vagrant/dot-files/.shared_aliases; source ~/.bashrc'

if [ -f /var/vagrant/dot-files/.shared_aliases ]; then
    . /var/vagrant/dot-files/.shared_aliases
fi

# Important Directories
alias sites='cd /var/www'

# Sites
alias akceli='cd /var/www/akceli'
alias api.flippilot='sites; cd api.flippilot'
alias app.flippilot='sites; cd app.flippilot'

# Scaffold Generation Commands
alias genmodel='php artisan gen:full --template-set=model-only'
alias genapi='php artisan gen:templates --template-set=api-crud-controller-only'
alias genresource='php artisan gen:templates --template-set=resource-only'
alias genenum='php artisan gen:templates --template-set=enum-model'
alias genfull='php artisan gen:full'
alias gendocs='php artisan apidoc:generate'

# Laravel Aliases
alias dump='php artisan cache:clear; composer dump-autoload'
alias rollback='php artisan migrate:rollback'
alias migrate='php artisan migrate'
alias seed='php artisan migrate --seed'

alias fresh='php artisan migrate:fresh --seed'
alias refresh='dump; fresh'

function genmigration() {
        php artisan make:migration ${1}_migration --create=$1
}

alias routes='php artisan route:list'
function route() {
	php artisan route:list | grep $1
}

